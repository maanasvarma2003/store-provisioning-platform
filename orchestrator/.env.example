NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/store_platform?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kubernetes
IN_CLUSTER=false
KUBECONFIG=~/.kube/config

# Domain
BASE_DOMAIN=127.0.0.1.nip.io

# Helm
HELM_BINARY=helm
HELM_CHARTS_PATH=../helm

# Provisioning
PROVISIONING_TIMEOUT_MS=600000
MAX_CONCURRENT_PROVISIONS=5

# Resource Quotas
DEFAULT_CPU_LIMIT=2
DEFAULT_MEMORY_LIMIT=4Gi
DEFAULT_STORAGE_LIMIT=10Gi
