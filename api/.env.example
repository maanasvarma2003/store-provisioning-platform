PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/store_platform?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Kubernetes
KUBECONFIG=~/.kube/config
IN_CLUSTER=false

# Domain
BASE_DOMAIN=127.0.0.1.nip.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=10

# Store Limits
MAX_STORES_PER_USER=50
PROVISIONING_TIMEOUT_MS=600000
